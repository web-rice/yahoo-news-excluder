{
  "manifest_version": 3,
  "name": "Y!News Excluder",
  "description": "Yahoo!ニュースから指定ワードがタイトルに含まれる記事を除外する拡張機能です。",
  "version": "1.2.0",
  "icons": {
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "action": {
    "default_icon": {
      "19": "icon/icon_19.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.yahoo.co.jp/*",
        "*://*.yahoo.com/*"
      ],
      "js": [
        "selectors_data.js",
        "content_scripts.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}