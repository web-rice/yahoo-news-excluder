{
  "manifest_version": 2,
  "name": "Y!News Excluder",
  "description": "Yahoo!ニュースから指定ワードがタイトルに含まれる記事を除外する拡張機能です。",
  "version": "1.1.3",
  "icons": {
    "32": "icon/icon_32.png",
    "48": "icon/icon_48.png",
    "128": "icon/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.yahoo.co.jp/*"
      ],
      "js": [
        "content_scripts.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "icon/icon_19.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
	"tabs"
  ]
}
